{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "docker-build",
            "type": "shell",
            "command": "docker-compose -f 'docker-compose.yml' -f 'dev-compose.yaml' up -d --build",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "docker-logs",
            "type": "shell",
            "command": "docker-compose logs --tail='all' -f",
            "problemMatcher": []
        },
        {
            "label": "vm-ssh",
            "type": "shell",
            "osx": {
                "command": "cd ./dev-vm/ && vagrant ssh -- -L 9191:127.0.0.1:9090 -L 3131:127.0.0.1:3000"
            },
            "linux": {
                "command": "cd ./dev-vm/ && vagrant ssh -- -L 9191:127.0.0.1:9090 -L 3131:127.0.0.1:3000"
            },
            "windows": {
                "command": "cd ./dev-vm/; vagrant.exe ssh -- -L 9191:127.0.0.1:9090 -L 3131:127.0.0.1:3000;"
            },
            "problemMatcher": []
        },
    ]
}